<div class="container profile-all">
  <p id="notice"><%= notice %></p>
  <h3>Profiles</h3>
  <% @profiles.each do |profile| %>
    <div class="card all-profile">
      <div class="card-body">
        <div><%= image_tag profile.image.url, size:"350x200" %></div>
        <div><%= profile.user.name %></div>
      </div>
      <div class="footer">
        <%= link_to 'Show', profile %>
        <%= link_to 'Edit', edit_profile_path(profile) %>
        <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>   
      </div>
    </div>
  <% end %>
</div>
